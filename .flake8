[flake8]
max-line-length = 120
ignore =
    # W503: line break before binary operator (black handles this)
    W503,
    # E203: whitespace before ':' (black handles this)
    E203,
    # E501: line too long (we've agreed to allow longer lines)
    E501,
    # C901: function is too complex
    C901
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist
